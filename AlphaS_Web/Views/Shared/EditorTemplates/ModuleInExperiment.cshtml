@model AlphaS_Web.Models.ModuleInExperiment

<div class="row">
    @{/*
          @Html.DisplayNameFor(model => model.ModuleOrder)
          @Html.DisplayFor(model => model.ModuleOrder)
        */
    }


    <div class="form-group">
        <label asp-for="ModuleOrder" class="control-label"></label>
        <input asp-for="ModuleOrder" class="form-control" />
        <span asp-validation-for="ModuleOrder" class="text-danger"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ModuleName)
        @Html.DropDownList("ModuleName", (IEnumerable<SelectListItem>)ViewBag.Modules, "Choose Module", htmlAttributes: new { @class = "form-control" })
    </div>

        <div id="@("InputModule"+Model.ModuleOrder)" >

        </div>


        
        <div class="col-md-4">
            <input class="btn btn-default" type="button" id="@("btnGetVariables"+Model.ModuleOrder)" value="Add module" />
        </div>
        <script type="text/javascript">
            $("#@("btnGetVariables"+Model.ModuleOrder)").on('click', function () {
                $.ajax({
                    async: true,
                    data: $('#form').serialize(),
                    type: "POST",
                    url: '/Experiments/OpenVariables',
                    success: function (partialView) {
                        console.log("partialView: " + partialView);
                        $('#@("InputModule"+Model.ModuleOrder)').html(partialView);
                    }
                });
            });
        </script>

    </div>






@section Scripts {

    <script type="text/javascript">
        $("#ModuleName").change(function () {
            //var getText = $('option:selected', this).text();
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: '/Experiments/OpenVariables/',
                success: function (partialView) {
                    console.log("partialView: " + partialView);
                    $('#InputsContainer').html(partialView);
                }
            });
        });
    </script>

    <script type="text/javascript">
        $("#btnGetVariables").on('click', function () {
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: '/Experiments/OpenVariables',
                success: function (partialView) {
                    console.log("partialView: " + partialView);
                    $('#InputsContainer').html(partialView);
                }
            });
        });
    </script>



}