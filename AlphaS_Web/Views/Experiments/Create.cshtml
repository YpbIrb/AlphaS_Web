@model AlphaS_Web.Models.Utils.ExperimentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Experiment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Modules" class="control-label"></label>
            <div id="ModulesContainer">
                @Html.EditorFor(model => model.Modules)
            </div>

            @Html.DropDownList("ModuleName", (IEnumerable<SelectListItem>)ViewBag.Modules, "Choose Module", htmlAttributes: new { @class = "form-control", @id = "ModuleName" })

            @Html.DropDownList("PresetName", (IEnumerable<SelectListItem>)ViewBag.Presets, "Choose Preset", htmlAttributes: new { @class = "form-control", @id = "PresetName" })
            <div class="form-group">
                <div class="col-md-4">
                    <input class="btn btn-default" type="button" id="btnAddModule" value="Add Module" />
                </div>
                <div class="col-md-4">
                    <input class="btn btn-default" type="button" id="btnAddPreset" value="Add Preset" />
                </div>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $("#btnAddModule").on('click', function () {
            console.log("Adding module");
            var ddl = document.getElementById("ModuleName");
            var SelVal = ddl.value;
            console.log("SelVal = " + SelVal);
            var neaded_url = "/Experiments/AddModule/" + SelVal;
            console.log("PartitialVeiw url : " + neaded_url);
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: neaded_url,
                success: function (partialView) {
                    $('#ModulesContainer').html(partialView);
                }
            });
        });
    </script>


    <script type="text/javascript">
        $("#btnAddPreset").on('click', function () {
            console.log("Adding preset");
            var ddl = document.getElementById("PresetName");
            var SelVal = ddl.value;
            console.log("SelVal = " + SelVal);
            var neaded_url = "/Experiments/AddPreset/" + SelVal;
            console.log("PartitialVeiw url : " + neaded_url);
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: neaded_url,
                success: function (partialView) {
                    $('#ModulesContainer').html(partialView);
                }
            });
        });
    </script>


}
